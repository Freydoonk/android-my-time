<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="fill_parent" android:layout_width="fill_parent"
	android:orientation="horizontal" android:padding="10sp">
	<TextView android:id="@+id/name" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:textColor="#ffffffff"
		android:text="project name" android:textSize="22sp"/>
	<TextView android:id="@+id/run_indicator"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:textColor="#ffffffff" android:gravity="right" android:text="running" android:layout_toRightOf="@+id/name" android:paddingRight="5dip" android:textSize="22sp"/>
</RelativeLayout>
